.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100vh - 40px);
  padding: 10px;
  flex-wrap: nowrap;
}
.content .content-heard {
  display: flex;
  width: 100%;
  height: 100px;
  position: -webkit-sticky;
  position: sticky;
  margin-top: 50px;
  margin-bottom: 10px;
  flex-direction: row;
  align-items: flex-end;
}
.content .content-heard .user-name {
  font-size: 20px;
  font-weight: 600;
  color: #1c1c1c;
  white-space: nowrap;
  margin-left: 20px;
}
.content .content-main {
  height: calc(100vh - 130px);
  width: 100%;
  border-radius: 6px;
}
.content .content-main .title {
  width: 100%;
  height: 100px;
  border-radius: 6px;
  background-color: #e7e7e7;
}
.content .content-main .content-button {
  height: 60px;
  text-align: left;
  line-height: 60px;
  border-radius: 6px;
  padding: 0 10px;
  background-color: #e7e7e7;
  margin-top: 10px;
}
